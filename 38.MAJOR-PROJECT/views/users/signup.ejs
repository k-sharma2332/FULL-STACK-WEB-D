<% layout("/layouts/boilerPlate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3"><label for="username" class="form-label">Username</label>
                <input name="username" id="username"
                type="text"
                class="form-control"
                required>
                <div class="valid-feedback">looks good!</div>
                <div class="mb-3"><label for="email" class="form-label">Email</label>
                    <input name="email" id="email"
                    type="email"
                    class="form-control"
                    required />
                </div>
                <div class="mb-3"><label for="password" class="form-label">password</label>
                    <input name="password" id="password"
                    type="password"
                    class="form-control"
                    required>
                    <div class="valid-feedback">
                </div><br>
        <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>